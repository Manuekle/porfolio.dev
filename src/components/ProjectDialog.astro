---
interface Props {
  project: {
    title: string
    description: string
    image: string
    techStack: string[]
    features: string[]
    webLink?: string
    githubLink?: string
    status?: string
  }
  isOpen: boolean
}

const { project, isOpen } = Astro.props
---

<div
  id={`dialog-${project.title.toLowerCase().replace(/\s+/g, '-')}`}
  class="project-dialog pointer-events-none fixed inset-0 z-50 flex items-center justify-center bg-black/50 p-4 opacity-0 backdrop-blur-sm transition-opacity duration-300"
  data-open={isOpen}
>
  <div
    class="relative max-h-[90vh] w-full max-w-2xl overflow-y-auto rounded-2xl border-4 border-white bg-[#F8F8F8]/95 p-6 shadow-2xl backdrop-blur-md md:p-8"
  >
    <!-- Close Button -->
    <button
      class="close-dialog absolute top-4 right-4 flex h-8 w-8 items-center justify-center rounded-full bg-gray-100 text-gray-600 transition-colors hover:bg-gray-200"
      aria-label="Close dialog"
    >
      <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <!-- Project Image -->
    <div class="mb-6 overflow-hidden rounded-lg">
      <img src={project.image} alt={project.title} class="h-48 w-full object-cover" />
    </div>

    <!-- Project Title -->
    <div class="mb-4 flex items-center gap-3">
      <h2 class="text-3xl font-bold tracking-[-0.02em]">{project.title}</h2>
      {
        project.status && (
          <span class="rounded-full bg-orange-100 px-3 py-1 text-xs font-semibold text-orange-700">
            {project.status}
          </span>
        )
      }
    </div>

    <!-- Project Description -->
    <p class="mb-6 tracking-[-0.02em] text-gray-600">{project.description}</p>

    <!-- Tech Stack -->
    <div class="mb-6">
      <h3 class="mb-3 text-xs font-semibold text-gray-500 uppercase">Tech Stack</h3>
      <div class="flex flex-wrap gap-2">
        {
          project.techStack.map((tech) => (
            <span class="rounded-full bg-gray-100 px-3 py-1 text-xs font-medium tracking-[-0.02em]">
              {tech}
            </span>
          ))
        }
      </div>
    </div>

    <!-- Features -->
    <div class="mb-6">
      <h3 class="mb-3 text-xs font-semibold text-gray-500 uppercase">Key Features</h3>
      <ul class="space-y-2">
        {
          project.features.map((feature) => (
            <li class="flex items-start gap-2">
              <svg
                class="mt-1 h-5 w-5 flex-shrink-0 text-green-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"
                />
              </svg>
              <span class="tracking-[-0.02em] text-gray-700">{feature}</span>
            </li>
          ))
        }
      </ul>
    </div>

    <!-- Links -->
    <div class="flex flex-wrap gap-3">
      {
        project.webLink && (
          <a
            href={project.webLink}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 rounded-full bg-black px-4 py-2 font-medium text-white transition-colors hover:bg-gray-800"
          >
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
              />
            </svg>
            View Live Demo
          </a>
        )
      }
      {
        project.githubLink && (
          <a
            href={project.githubLink}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 rounded-full border-2 border-gray-300 px-4 py-2 font-medium text-gray-700 transition-colors hover:border-gray-400 hover:bg-gray-50"
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                fill-rule="evenodd"
                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                clip-rule="evenodd"
              />
            </svg>
            View on GitHub
          </a>
        )
      }
    </div>
  </div>
</div>

<script>
  // Dialog functionality
  document.addEventListener('DOMContentLoaded', () => {
    const dialogs = document.querySelectorAll('.project-dialog')

    dialogs.forEach((dialog) => {
      const closeBtn = dialog.querySelector('.close-dialog')

      // Close on button click
      closeBtn?.addEventListener('click', () => {
        dialog.classList.add('opacity-0', 'pointer-events-none')
      })

      // Close on backdrop click
      dialog.addEventListener('click', (e) => {
        if (e.target === dialog) {
          dialog.classList.add('opacity-0', 'pointer-events-none')
        }
      })

      // Close on Escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
          dialog.classList.add('opacity-0', 'pointer-events-none')
        }
      })
    })
  })
</script>
