---
import { Image } from 'astro:assets'

interface Props {
  name: string
  title: string
  photoUrl?: string
}

const { name, title, photoUrl = '/placeholder.jpeg' } = Astro.props
---

<section style="background-color: #F8F8F8;">
  <div class="mx-auto max-w-5xl px-6 py-20 md:py-24">
    <!-- Hero Text with Inline Avatar -->
    <div class="mb-8">
      <!-- Avatar Image -->
      <div class="mb-6 flex justify-center md:justify-start">
        <span class="group inline-block">
          <span
            class="relative inline-block h-24 w-24 overflow-hidden rounded-full border-4 border-white shadow-lg transition-all duration-300 group-hover:shadow-xl md:h-28 md:w-28"
          >
            <Image
              src={photoUrl}
              alt={name}
              width={112}
              height={112}
              class="h-full w-full object-cover transition-all duration-300"
            />
          </span>
        </span>
      </div>

      <!-- Heading -->
      <h1 class="mb-4 text-4xl font-bold tracking-[-0.04em] md:text-5xl">
        Hi, I'm {name}!
      </h1>

      <!-- Subtitle -->
      <p class="mb-4 text-2xl md:text-3xl">
        <span class="tracking-[-0.04em] text-gray-500">I'm a </span>
        <span class="font-bold tracking-[-0.04em]">Web Developer</span>
        <span class="tracking-[-0.04em] text-gray-500"> at</span>
        <br />
        <span class="font-bold tracking-[-0.04em]" style="color: #ff6b35;">Freelance Projects</span
        >.
      </p>

      <!-- Open to Work Badge -->
      <div class="mb-8">
        <span
          class="inline-flex items-center rounded-full border border-zinc-200 bg-white px-3 py-1 text-xs font-medium tracking-[-0.02em] text-green-700"
        >
          <span class="mr-2 h-2 w-2 rounded-full bg-green-500"></span>
          Open to work
        </span>
      </div>

      <!-- CTA and Description -->
      <div class="flex flex-col items-start gap-6 sm:flex-row">
        <a
          href="mailto:meerazo7@hotmail.com"
          class="inline-flex items-center rounded-full bg-black px-4 py-2 font-medium text-white transition-colors hover:bg-zinc-800"
        >
          Book a call
        </a>
        <p class="max-w-md text-gray-600">
          Feel free to explore my portfolio and reach outâ€”I'd love to connect!
        </p>
      </div>
    </div>
  </div>
</section>
