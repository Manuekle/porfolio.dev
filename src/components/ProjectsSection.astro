---
import ProjectCard, { type ProjectProps } from './ProjectCard.astro'

interface Props {
  projects: ProjectProps[]
}

const { projects } = Astro.props
---

<section id="work" class="relative py-32">
  <div class="mx-auto max-w-7xl px-4">
    <!-- Section header -->
    <div class="mb-20 text-center">
      <h2 class="mb-6 text-5xl font-black md:text-6xl">
        <span
          class="bg-gradient-to-r from-purple-400 via-pink-400 to-blue-400 bg-clip-text text-transparent"
        >
          Selected Work
        </span>
      </h2>
      <p class="mx-auto max-w-2xl text-xl text-gray-400">
        A collection of projects that showcase my skills and passion for creating exceptional
        digital experiences
      </p>
    </div>

    <!-- Projects grid -->
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-2">
      {
        projects.map((project, index) => (
          <div
            class="project-item translate-y-8 opacity-0"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <ProjectCard {...project} />
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .project-item {
    animation: fadeInUp 0.8s ease-out forwards;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
