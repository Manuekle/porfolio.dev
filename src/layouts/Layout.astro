---
import '../styles/global.css'

interface Props {
  title: string
  description?: string
}

const { title = 'Portfolio', description = 'Portfolio personal de Manuel Erazo' } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/geist@1.2.1/dist/font.css" />
    <link
      rel="preload"
      href="https://manudev.vercel.app/public/placeholder.jpeg"
      as="image"
      type="image/jpeg"
      crossorigin="anonymous"
    />

    <meta name="description" content={description} />

    <meta property="og:url" content="https://www.manudev.vercel.app/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://manudev.vercel.app/placeholder.jpeg" />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content={title} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@manuekle" />
    <meta name="twitter:creator" content="@manuekle" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
  </head>
  <body>
    <main
      class="bg-background text-text selection:bg-primary/10 min-h-screen font-sans antialiased"
    >
      <slot />
    </main>
  </body>
</html>
