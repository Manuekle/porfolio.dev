---
import '../styles/global.css'
import LanguageSelector from '../components/LanguageSelector.astro'
import { getTranslations, type Language } from '../i18n/translations'
import 'aos/dist/aos.css'

interface Props {
  title: string
  description?: string
  lang?: Language
}

const { title = 'Portfolio', description = 'Portfolio personal de Manuel Erazo', lang = 'es' } = Astro.props
const t = getTranslations(lang)
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/geist@1.2.1/dist/font.css" />
    <link
      rel="preload"
      href="https://manudev.vercel.app/public/placeholder.jpeg"
      as="image"
      type="image/jpeg"
      crossorigin="anonymous"
    />

    <meta name="description" content={description} />

    <meta property="og:url" content="https://www.manudev.vercel.app/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://manudev.vercel.app/placeholder.jpeg" />
    <meta property="og:locale" content={lang === 'es' ? 'es_ES' : 'en_US'} />
    <meta property="og:site_name" content={title} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@manuekle" />
    <meta name="twitter:creator" content="@manuekle" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
  </head>
  <body>
    <main
      class="bg-background text-text selection:bg-primary/10 min-h-screen font-sans antialiased"
    >
      <slot />
    </main>
    <script>
      import AOS from 'aos'
      AOS.init({
        duration: 800,
        easing: 'ease-out-cubic',
        once: true,
        offset: 100,
      })
    </script>
  </body>
</html>
